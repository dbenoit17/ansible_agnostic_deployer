vms:
- name: 0workstation
  tag: workstation
  allowNested: {{ allow_nested }}
  preferPhysicalHost: {{ physical_host }}
  description: "0workstation\nnohbac: true\n"
  numCpus: 2
  memorySize:
    unit: GB
    value: 6
  hostnames: [workstation-REPL.rhpds.opentlc.com, workstation.example.com, workstation]
  supportsCloudInit: True
  keypairId: 62226455
  keypairName: "opentlc-admin-backdoor"
  userData: |
    #cloud-config
    ssh_pwauth: False
    disable_root: False
    users:
      - name: "{{ remote_user }}"
        sudo: ALL=(ALL) NOPASSWD:ALL
        lock_passwd: False
        ssh-authorized-keys:
          - "{{ env_public_key }}"
    runcmd:
      - sed -i -e '/^GSSAPIAuthentication/s/^.*$/GSSAPIAuthentication no/' /etc/ssh/sshd_config
      - sed -i -e '$aUseDNS no' /etc/ssh/sshd_config
      - systemctl restart sshd
  hardDrives:
  - index: 0
    imageName: rhel-guest-image-7.3-35.x86_64
    boot: True
    controller: virtio
    name: root disk
    size:
      unit: GB
      value: 40
    type: DISK
  - index: 1
    boot: False
    controller: virtio
    name: vol
    size:
      unit: GB
      value: 100
    type: DISK
  networkConnections:
  - name: eth0
    device:
      index: 0
      deviceType: virtio
      useAutomaticMac: False
      mac: 2c:c2:60:48:bd:62
    ipConfig:
      autoIpConfig:
        reservedIp: 192.168.0.5
      hasPublicIp: true
  suppliedServices:
  - external: True
    ip: 192.168.0.5
    name: ssh
    portRange: 22
    protocol: SSH
  - external: True
    ip: 192.168.0.5
    name: dns-t
    portRange: 53
    protocol: TCP
  - external: True
    ip: 192.168.0.5
    name: dns-u
    portRange: 53
    protocol: UDP
  - external: True
    ip: 192.168.0.5
    name: oseapi
    portRange: 80,8443,8080-8085
    protocol: TCP
